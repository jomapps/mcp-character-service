# MCP Character Service - Development Environment Configuration
# Copy to .env and fill with real values for development

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql://character_user:character_pass@localhost:5432/character_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8011
MCP_SERVER_NAME=character-service

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
CHARACTER_CACHE_TTL=300

# Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8012
STRUCTURED_LOGGING=true
LOG_FORMAT=json

# Security
SECRET_KEY=dev-secret-key-change-in-production
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:3010"]

# PayloadCMS Integration
PAYLOAD_CMS_URL=http://localhost:3001
PAYLOAD_CMS_API_KEY=your-payload-cms-api-key-here
PAYLOAD_CMS_TIMEOUT=30

# LLM Provider Configuration
LLM_PROVIDER_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=your-llm-api-key-here
LLM_MODEL_NAME=gpt-3.5-turbo
LLM_TIMEOUT=60
LLM_MAX_TOKENS=200
LLM_TEMPERATURE=0.7

# Character Generation Settings
MAX_CHARACTERS_PER_REQUEST=4
PROFILE_GENERATION_TIMEOUT=300
MOTIVATION_WORD_LIMIT=50
VISUAL_SIGNATURE_WORD_LIMIT=40

# Feature Flags
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_PAYLOAD_INTEGRATION=true
ENABLE_LLM_INTEGRATION=true
